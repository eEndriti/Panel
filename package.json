{
  "name": "paneli-app",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "react-scripts build",
    "package": "electron-builder"
  },
  "build": {
    "appId": "com.paneli.paneli",
    "productName": "Paneli",
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "files": [
      "react/dist/**/*",
      "main.js",
      "preload.js",
      "database.js",
      "config.js",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "mssql": "^12.2.0"
  }
}
